{
  "manifest_version": 2,
  "name": "Prm Ext Tools",
  "version": "1.0",
  "description": "Prm Txt Tools",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_title": "prm-ext-tools",
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "storage", "*://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["index.js"]
    }
  ],
  "web_accessible_resources": ["js/*"]
}
